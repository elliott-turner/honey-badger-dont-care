<?xml version="1.0"?>
<robot name="DoubleCartPole">
  
  <gazebo>
    <static>true</static>
  </gazebo>

  <link name="base">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="1" />
    </inertial>

    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size=".5 .2 .2" />
      </geometry>
      <material>
        <color rgba="0 1 0 1" />
      </material>
    </visual>

    <visual>
      <origin xyz=".15 0 -.15" rpy="0 0 0" />
      <geometry>
        <sphere radius=".05" />
      </geometry>
      <material>
        <color rgba="0 0 0 1" />
      </material>
    </visual>
    
    <visual>
      <origin xyz="-.15 0 -.15" rpy="0 0 0" />
      <geometry>
        <sphere radius=".05" />
      </geometry>
      <material>
        <color rgba="0 0 0 1" />
      </material>
    </visual>
  </link>
 
  <link name="pendulum0">
    <inertial>
      <origin xyz="0 0 -0.1" />
      <mass value="1" />
    </inertial>

    <visual>
      <origin xyz="0 0 -0.1" />
      <geometry>
         <sphere radius=".05" />
      </geometry>
      <material>
        <color rgba="0 0 1 1" />
      </material>
    </visual>

    <visual>
      <origin xyz="0 0 -0.05" />
      <geometry>
         <cylinder length="1" radius=".01" />
      </geometry>
      <material>
        <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>

  <joint name="x" type="prismatic">
    <parent link="world" />
    <child link="base" />
    <axis xyz="1 0 0" />
  </joint>

  <joint name="theta0" type="continuous">
    <parent link="base" />
    <child link="pendulum0" />
    <axis xyz="0 -1 0" />
    <origin xyz="0 0 0.1"/>
  </joint>

  <transmission type="SimpleTransmission" name="base_force">
    <actuator name="force" />
    <joint name="x" />
  </transmission>
</robot>